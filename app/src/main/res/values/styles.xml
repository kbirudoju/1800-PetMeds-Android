<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="application.theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/petmeds_blue</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/background.dull</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/petmeds_blue</item>

        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/black</item>

        <item name="colorControlNormal">@color/white</item>

    </style>

    <!-- ActionBar title text -->
    <style name="ToolbarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="application.theme.splash"></style>

    <style name="style"/>

    <style name="style.text.medium" parent="android:TextAppearance.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="style.text.large" parent="android:TextAppearance.Large">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="style.menu">
        <item name="android:background">@color/background.light</item>
        <item name="android:dividerHeight">0px</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="style.menu.entry" parent="style.text.medium">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <style name="header">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="styledefault">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
    </style>

    <style name="styledefault_no_padding">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="list_row">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textColor">@color/battleship_grey</item>
        <item name="android:background">@color/white</item>

    </style>

    <style name="paragraph">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textColor">@color/battleship_grey</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
    </style>

    <style name="label">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textColor">@color/battleship_grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/pattern_light_blue</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_13</item>
    </style>

    <style name="formlabel">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:fontFamily">@string/font_roboto_light</item>
        <item name="android:textColor">@color/battleship_grey</item>
    </style>

    <style name="rounded_button_text">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textColor">@color/battleship_grey</item>
    </style>

    <style name="DialogStyleFingerprint" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/DialogTitleStyleFingerprint</item>
        <item name="background">@color/white</item>
        <item name="colorAccent">@color/petmeds_blue</item>
    </style>

    <style name="DialogTitleStyleFingerprint">
        <item name="android:background">@color/fingerprint_alert_title_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="product_label">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@string/font_roboto_medium</item>
    </style>

    <style name="order_title">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@string/font_roboto_regular
            <item name="android:textColor">@color/grey</item>
        </item>
    </style>

    <style name="order_label">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@string/font_roboto_regular
            <item name="android:textColor">@color/light_grey</item>
        </item>
    </style>


    <style name="StyledEditTextFloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/battleship_grey</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="StyledEditTextHintLayout">
        <item name="android:textColorHint">@color/battleship_grey</item>
    </style>

    <style name="StyledEditTextTheme">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/petmeds_blue</item>
        <item name="colorControlActivated">@color/petmeds_blue</item>
        <item name="android:textColorPrimary">@color/petmeds_blue</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="StyledEditText">
        <item name="android:theme">@style/StyledEditTextTheme</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="dialog_button_style">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textColor">@color/petmeds_blue</item>
    </style>
    <style name="dialog_button_style_blue">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/petmeds_blue</item>
    </style>
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/pet_meds_blue_selected</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="StyleCrouton">
        <item name="android:textColor">@color/color_snackbar_text</item>
    </style>

    <style name="StyleForNotificationTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="StyleForNotification" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/StyleForNotificationTitle</item>
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/petmeds_blue</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/light_grey</item>
        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
    </style>

    <style name="StyleButton">
        <item name="android:background">@color/petmeds_blue</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="title_sales_pitch">
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="subtitle_sales_pitch">
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="title_whats_next">
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="subtitle_whats_next">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="StyleForCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/petmeds_blue</item>
        <item name="colorControlActivated">@color/radio_text_selected</item>
    </style>
    <style name="StyleForMultiChoiceDailog">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:background">@color/fingerprint_alert_title_background</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="checkoutbuttonlabel">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textColor">@color/petmeds_blue</item>
    </style>

  <style name="cart_item_title">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cart_button_txt">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textColor">@color/circle_indicator_stroke</item>
    </style>

    <style name="offer_card_title_txt">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textColor">@color/battleship_grey</item>
    </style>

    <style name="cart_standard_shipping">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textColor">@color/battleship_grey</item>
    </style>

    <style name="MY.DIALOG" parent="android:Theme" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="login_navigator" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textColor">@color/grey_text</item>
    </style>

</resources>
