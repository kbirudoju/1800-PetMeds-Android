<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="application.theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/petmeds_blue</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/background.dull</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/petmeds_blue</item>

        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- ActionBar title text -->
    <style name="ToolbarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="application.theme.splash">
    </style>

    <style name="style"/>

    <style name="style.text.medium" parent="android:TextAppearance.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="style.text.large" parent="android:TextAppearance.Large">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="style.menu">
        <item name="android:background">@color/background.light</item>
        <item name="android:dividerHeight">0px</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="style.menu.entry" parent="style.text.medium">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

<style name="header">
    <item name="android:textSize">@dimen/sp_20</item>
    <item name="android:fontFamily">@string/font_roboto_regular</item>
    <item name="android:textColor">@color/black</item>
</style>

    <style name="styledefault">
    <item name="android:textSize">@dimen/sp_16</item>
    <item name="android:fontFamily">@string/font_roboto_regular</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:paddingLeft">@dimen/dp_16</item>
    <item name="android:paddingRight">@dimen/dp_16</item>
    <item name="android:background">@color/white</item>

</style>
    <style name="list_row">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textColor">@color/battleship_grey</item>
        <item name="android:background">@color/white</item>

    </style>
    <style name="paragraph">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textColor">@color/battleship_grey</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
    </style>
    <style name="label">
    <item name="android:textSize">@dimen/sp_14</item>
    <item name="android:fontFamily">@string/font_roboto_medium</item>
    <item name="android:textColor">@color/battleship_grey</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:background">@color/pattern_light_blue</item>
    <item name="android:paddingLeft">@dimen/dp_16</item>
    <item name="android:paddingRight">@dimen/dp_13</item>
</style>

    <style name="formlabel">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:fontFamily">@string/font_roboto_light</item>
        <item name="android:textColor">@color/battleship_grey</item>
    </style>
    <style name="rounded_button_text">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textColor">@color/battleship_grey</item>
    </style>

</resources>
