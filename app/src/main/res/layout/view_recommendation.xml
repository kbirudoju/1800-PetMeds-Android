<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_40"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/recommendation_pet_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:background="@drawable/circular_background"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_logout"/>
        <TextView
            android:id="@+id/recommendation_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_toRightOf="@+id/recommendation_pet_image"
            style="@style/styledefault_no_padding"/>
        <TextView
            android:id="@+id/pet_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_below="@+id/recommendation_title_label"
            android:layout_toRightOf="@+id/recommendation_pet_image"
            android:layout_marginTop="@dimen/dp_5"
            style="@style/rounded_button_text"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_13"
        >
        <com.petmeds1800.util.TextViewWithImages
            android:id="@+id/quote_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/rounded_button_text"
            />

        <ImageView
            android:id="@+id/doctor_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_21"
            android:background="@drawable/circular_background"
            android:layout_below="@+id/quote_label"
            android:layout_marginBottom="@dimen/dp_12"/>
        <TextView
            android:id="@+id/doctor_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_toRightOf="@+id/doctor_image"
            android:layout_below="@+id/quote_label"
            style="@style/styledefault_no_padding"/>

    </RelativeLayout>

</LinearLayout>