<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_40"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/recommendation_pet_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:background="@drawable/circular_background"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_logout"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/recommendation_pet_image"
            android:orientation="vertical">
        <TextView
            android:id="@+id/recommendation_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="ffsfsfs"
            style="@style/styledefault_no_padding"/>
        <TextView
            android:id="@+id/pet_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ddfdf"
            android:layout_marginTop="@dimen/dp_2"
            style="@style/rounded_button_text"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_13"
        >
        <RelativeLayout
            android:id="@+id/quote_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_30"
            >
            <ImageView
                android:id="@+id/left_quote_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_quote_left"
                android:layout_alignParentLeft="true"

               />
            <TextView
                android:id="@+id/quote_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/rounded_button_text"
                android:layout_toRightOf="@+id/left_quote_img"
                android:layout_toLeftOf="@+id/right_quote_img"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                />
            <ImageView
                android:id="@+id/right_quote_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_quote_right"
                android:layout_alignBottom="@+id/quote_label"
                android:layout_alignParentRight="true"
               />
        </RelativeLayout>


        <ImageView
            android:id="@+id/doctor_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_21"
            android:background="@drawable/circular_background"
            android:layout_below="@+id/quote_view"
            android:layout_marginBottom="@dimen/dp_12"/>
        <TextView
            android:id="@+id/doctor_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_toRightOf="@+id/doctor_image"
            android:layout_below="@+id/quote_view"
            style="@style/styledefault_no_padding"/>

    </RelativeLayout>

</LinearLayout>