<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/refill_view_pet_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/refill_view_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/refill_view_pet_image"
            android:layout_marginLeft="@dimen/dp_16"/>
        <TextView
            android:id="@+id/refill_view_pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/refill_view_pet_image"
            android:layout_below="@+id/refill_view_title_label"
            android:layout_marginLeft="@dimen/dp_16"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
       >
        <ImageView
            android:id="@+id/refill_view_product_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_logout"/>
        <LinearLayout
            android:id="@+id/product_detail_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_toRightOf="@+id/refill_view_product_image"
            android:gravity="center">
            <TextView
                android:id="@+id/refill_view_product_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />
            <TextView
                android:id="@+id/refill_view_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/refill_view_original_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"/>
            <TextView
                android:id="@+id/refill_view_sell_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/add_cart_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/petmeds_blue"
            android:padding="@dimen/dp_13"
            android:layout_below="@+id/product_detail_layout"/>
    </RelativeLayout>
</LinearLayout>