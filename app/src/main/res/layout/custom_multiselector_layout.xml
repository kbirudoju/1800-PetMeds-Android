<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:paddingTop="@dimen/dp_13"
                    android:paddingBottom="@dimen/dp_13"
                    android:paddingRight="@dimen/dp_1"
                    android:paddingLeft="@dimen/dp_1"

    >
        <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/medication_allery_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/dialog_button_style"
                android:text="@string/medication_allergy"/>
        <TextView
                android:layout_centerVertical="true"
                android:layout_alignBottom="@+id/medication_allery_title"
                android:layout_alignParentRight="true"
                android:id="@+id/add_edit_medication_allergies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/dialog_button_style"
                android:text="@string/add_title"/>

    </RelativeLayout>
    <TextView
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_20"
            android:lineSpacingExtra="3dp"
            android:id="@+id/medication_allergies_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/rounded_button_text"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_alignLeft="@+id/medication_allery_title"
            android:layout_below="@+id/medication_allery_title"/>
    <View android:layout_width="match_parent"
          android:layout_marginLeft="@dimen/dp_1"
          android:layout_marginRight="@dimen/dp_1"
          android:layout_height="1dp"
          android:background="@color/circle_indicator_stroke"
    >

    </View>

</merge>