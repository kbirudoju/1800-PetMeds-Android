<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/fingerprint_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="14dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="24dp">

    <TextView
            android:id="@+id/fingerprint_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/description.fingerprint"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"/>

    <ImageView
            android:id="@+id/imv_fingerprint_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/fingerprint_description"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_fingerprint"/>

    <TextView
            android:id="@+id/txv_fingerprint_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imv_fingerprint_icon"
            android:layout_alignTop="@+id/imv_fingerprint_icon"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/imv_fingerprint_icon"
            android:gravity="center_vertical"
            android:text="@string/hint.fingerprint"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/fingerprint_hint_color"/>
</RelativeLayout>