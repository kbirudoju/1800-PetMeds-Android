<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/errorText"
        style="@style/rounded_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_2"
        android:background="@color/light_crimson_red"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:text="@string/errorMsgForEmail"
        android:textColor="@color/crimson_red"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/xlarge_margin">

        <ImageView

            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_94"
            android:src="@drawable/ic_forgot_password" />

        <TextView
            style="@style/rounded_button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_40"
            android:text="@string/enter_email_for_temporary_password"
            android:textColor="@color/hint_color" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/email_edit"
                style="@style/StyledEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:hint="@string/label_email" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/errorTextOnEmail"
            style="@style/rounded_button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:drawableRight="@drawable/ic_text_warning"
            android:textColor="@color/crimson_red"
            android:visibility="invisible" />

        <Button
            android:id="@+id/email_my_password_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@color/petmeds_blue"
            android:gravity="center"
            android:text="@string/label_email_my_password"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>
</FrameLayout>