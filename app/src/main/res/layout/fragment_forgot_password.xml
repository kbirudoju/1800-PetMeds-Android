<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/xlarge_margin">

        //TODO: add icon from asset

        <ImageView

            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_94"
            android:src="@drawable/ic_forgot_password" />

        <TextView
            android:layout_marginLeft="@dimen/dp_2"
            style="@style/rounded_button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:text="@string/enterEmailForTemporaryPassword"
            android:textColor="@color/fingerprint_hint_color" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                style="@style/StyledEditText"
                android:id="@+id/email_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:hint="@string/label.email" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/email_my_password_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@color/petmeds_blue"
            android:gravity="center"
            android:text="@string/emailMeMyPassword"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>
</FrameLayout>
