<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_15">
    <Button
        android:id="@+id/email_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_us_txt"
        android:background="@drawable/rectangular_background"
        android:stateListAnimator="@null"
        style="@style/dialog_button_style"/>
    <Button
        android:id="@+id/call_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_call_us"
        android:layout_marginTop="@dimen/dp_17"
        android:stateListAnimator="@null"
        android:background="@drawable/rectangular_background"
        style="@style/dialog_button_style"/>

    <Button
        android:id="@+id/chat_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/live_chat_txt"
        android:stateListAnimator="@null"
        android:background="@drawable/rectangular_background"
        android:layout_marginTop="@dimen/dp_17"
        style="@style/dialog_button_style"/>
    <Button
        android:id="@+id/feedback_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_feedback_txt"
        android:stateListAnimator="@null"
        android:background="@drawable/rectangular_background"
        android:layout_marginTop="@dimen/dp_17"
        style="@style/dialog_button_style"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_social_network_txt"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_gravity="center"
        android:gravity="center"
        style="@style/dialog_button_style"
        android:textColor="@color/share_txt"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_21">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/imv_facebook"
                android:src="@drawable/ic_facebook"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/imv_twitter"
                android:src="@drawable/ic_twitter"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/imv_google"
                android:src="@drawable/ic_google"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/imv_linkedin"
                android:src="@drawable/ic_linked"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/imv_instagram"
                android:src="@drawable/ic_instagram"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/imv_youtube"
                android:src="@drawable/ic_youtube"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/copyright_txt"
        android:layout_marginTop="@dimen/dp_26"
        android:gravity="center"
        style="@style/dialog_button_style"
        android:textColor="@color/share_txt"/>
</LinearLayout>