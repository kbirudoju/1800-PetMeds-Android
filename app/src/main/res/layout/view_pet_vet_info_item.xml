<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16">
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/dp_62"
            android:layout_height="@dimen/dp_62"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/circular_background"
            />
        <LinearLayout
            android:id="@+id/product_detail_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_33"
            android:layout_toRightOf="@id/product_image"
            android:layout_toLeftOf="@+id/product_price_label"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/product_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_title"
                android:singleLine="true"
                android:text="jsbfjbf"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/quantity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_title"
                android:singleLine="true"
                />
            <TextView
                android:id="@+id/quantity_secondary_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/rounded_button_text"
                android:singleLine="true"
                />

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/pattern_blue"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"></LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/petNameInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/StyledEditTextHintLayout"
        app:hintTextAppearance="@style/StyledEditTextFloatingLabel"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16">

        <EditText
            android:id="@+id/pet_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_pet_name"
            android:singleLine="true"
            style="@style/StyledEditText"
            android:focusableInTouchMode="false"
            android:textColor="@color/edittext_selector"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/vetNameInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/StyledEditTextHintLayout"
        app:hintTextAppearance="@style/StyledEditTextFloatingLabel"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16">

        <EditText
            android:id="@+id/vet_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_vet_name"
            android:singleLine="true"
            android:paddingRight="@dimen/dp_16"
            style="@style/StyledEditText"
            android:focusableInTouchMode="false"
            android:textColor="@color/edittext_selector"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>