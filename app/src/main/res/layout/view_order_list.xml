<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_23"
    android:background="@color/white"
    >
   <!--Commenting below code as we need confirmation whether we have to show border on circle or not-->
  <!--  <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/product_image"
        android:layout_width="@dimen/dp_62"
        android:layout_height="@dimen/dp_62"
        app:civ_border_width="1dp"
        app:civ_border_color="#0000FF"/>-->
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/dp_62"
        android:layout_height="@dimen/dp_62"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/product_image"
        android:layout_toLeftOf="@+id/arrow_image"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20">
            <TextView
                android:id="@+id/order_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdgdsgsg"
                style="@style/list_row"/>
            <TextView
                android:id="@+id/order_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/list_row"/>
            <Button
                android:id="@+id/order_status_label"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_23"
                android:drawablePadding="@dimen/dp_3"
                android:maxWidth="@dimen/dp_180"
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_status_shipping"
                style="@style/rounded_button_text"
                />

    </LinearLayout>
    <ImageView
        android:id="@+id/arrow_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow"/>

</RelativeLayout>