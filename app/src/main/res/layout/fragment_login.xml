<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_skip"
        android:text="@string/label.skip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/petmeds_blue"
        android:layout_margin="@dimen/xxlarge_margin"/>

    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/petmeds_brand_logo_image"
       android:layout_below="@+id/label_skip"
        android:layout_marginTop="@dimen/dp_62"
        android:src="@drawable/ic_logo_petmeds"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sign_up_view"
        android:layout_below="@+id/petmeds_brand_logo_image"
        android:padding="@dimen/large_margin"
        android:gravity="center">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/StyledEditTextHintLayout"
            app:hintTextAppearance="@style/StyledEditTextFloatingLabel">

            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_edit"
                android:inputType="textEmailAddress"
                android:hint="@string/label.email"
                style="@style/StyledEditText"/>
            <!--TODO - remove hardcode email during release it-->

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/StyledEditTextHintLayout"
            app:hintTextAppearance="@style/StyledEditTextFloatingLabel">

            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxxlarge_margin"
                android:id="@+id/password_edit"
                android:inputType="textPassword"
                android:hint="@string/label.password"
                style="@style/StyledEditText" />
            <!--TODO - remove hardcode password during release it-->

        </android.support.design.widget.TextInputLayout>

        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxxlarge_margin"
            android:id="@+id/log_in_button"
            android:gravity="center"
            android:text="@string/label.login"
            android:textColor="@color/white"
            android:background="@color/petmeds_blue"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_forgot_password"
            android:text="@string/label.login_forgot_password"
            android:textColor="@color/petmeds_blue"
            android:layout_marginTop="@dimen/xxxlarge_margin"
            style="@style/dialog_button_style"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/sign_up_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label.no_account_sign_up"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:background="@null"
            style="@style/rounded_button_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up_button"
            android:text="@string/signup_txt"
            style="@style/dialog_button_style"
            android:padding="@dimen/dp_4"
            android:background="@null"/>
    </LinearLayout>

    <ProgressBar android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:id="@+id/progress_bar"/>

</RelativeLayout>