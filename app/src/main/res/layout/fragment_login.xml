<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_login">

    <TextView
        android:id="@+id/label_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/xxlarge_margin"
        android:text="@string/label.skip"
        android:textColor="@color/petmeds_blue" />

    <ImageView
        android:id="@+id/petmeds_brand_logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_skip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_62"
        android:src="@drawable/ic_logo_petmeds" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sign_up_view"
        android:layout_below="@+id/petmeds_brand_logo_image"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/large_margin">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_input"
            style="@style/StyledEditTextHintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/StyledEditTextFloatingLabel">

            <EditText
                android:id="@+id/email_edit"
                style="@style/StyledEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label.email"
                android:inputType="textEmailAddress" />
            <!--TODO - remove hardcode email during release it-->

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password_input"
            style="@style/StyledEditTextHintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/StyledEditTextFloatingLabel">

            <EditText
                android:id="@+id/password_edit"
                style="@style/StyledEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxxlarge_margin"
                android:hint="@string/label.password"
                android:inputType="textPassword" />
            <!--TODO - remove hardcode password during release it-->

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/log_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxxlarge_margin"
            android:background="@color/petmeds_blue"
            android:gravity="center"
            android:text="@string/label.login"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/label_forgot_password"
            style="@style/dialog_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxxlarge_margin"
            android:text="@string/label.login_forgot_password"
            android:textColor="@color/petmeds_blue" />


    </LinearLayout>

    <LinearLayout
            android:id="@+id/sign_up_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            style="@style/rounded_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/label.no_account_sign_up"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/sign_up_button"
            style="@style/dialog_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/dp_4"
            android:text="@string/signup_txt" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

</RelativeLayout>