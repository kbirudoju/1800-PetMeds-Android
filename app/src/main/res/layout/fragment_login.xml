<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label.skip"
            android:layout_alignParentRight="true"
            android:textColor="@color/petmeds_blue"
            android:layout_margin="@dimen/xxlarge_margin"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/petmeds_brand_logo_image"
               android:layout_margin="@dimen/xlarge_margin"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"/>

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_above="@+id/sign_up_button"
                  android:layout_below="@+id/petmeds_brand_logo_image"
                  android:padding="@dimen/large_margin"
                  android:gravity="center">

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/email_text"
                  android:hint="@string/label.email"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/xxxlarge_margin"
                  android:id="@+id/password_text"
                  android:hint="@string/label.password"/>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxxlarge_margin"
                android:id="@+id/log_in_button"
                android:gravity="center"
                android:text="@string/label.login"
                android:textColor="@color/white"
                android:background="@color/petmeds_blue"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/label.forgot_password"
                  android:textColor="@color/petmeds_blue"
                  android:layout_marginTop="@dimen/xxxlarge_margin"/>

    </LinearLayout>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up_button"
            android:layout_alignParentBottom="true"
            android:text="@string/label.no_account_sign_up"
            android:textColor="@color/black"
            android:padding="@dimen/xxxlarge_margin"
            android:textAllCaps="false"
            android:background="@color/white"/>

</RelativeLayout>