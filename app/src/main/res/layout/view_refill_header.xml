<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_40"
    android:layout_marginBottom="@dimen/dp_16">
    <RelativeLayout
        android:id="@+id/row_pet_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/refill_view_pet_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:background="@drawable/circular_background"
            android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/refill_view_pet_image"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_vertical">
        <TextView
            android:id="@+id/refill_view_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/styledefault_no_padding"/>
        <TextView
            android:id="@+id/refill_view_pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            style="@style/rounded_button_text"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>