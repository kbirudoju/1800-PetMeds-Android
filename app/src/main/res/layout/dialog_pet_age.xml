<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_label"
        style="@style/rounded_button_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/pattern_light_blue"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_13" />

    <com.petmeds1800.ui.pets.support.CustomValuePicker
        android:id="@+id/valuePicker"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_160"
        android:layout_below="@+id/title_label"
        android:layout_centerHorizontal="true"

        android:theme="@style/AppTheme.Picker" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/valuePicker"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            style="@style/dialog_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/dialog.cancel_button" />

        <Button
            android:id="@+id/ok_button"
            style="@style/dialog_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/save_txt" />
    </LinearLayout>

</RelativeLayout>