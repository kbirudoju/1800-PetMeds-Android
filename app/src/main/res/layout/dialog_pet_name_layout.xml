<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Light"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <android.support.v7.widget.Toolbar
        android:id="@+id/picker_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/pattern_light_blue"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:title="@string/pet_name"
        android:titleTextColor="@color/battleship_grey"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240"
        android:layout_below="@+id/picker_toolbar"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <ListView
            android:id="@+id/pet_name_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:cacheColorHint="#f8f8ff"
            android:choiceMode="singleChoice"
            android:divider="#000000"
            android:fadeScrollbars="true"
            android:fastScrollEnabled="true"
            android:footerDividersEnabled="true"
            android:textFilterEnabled="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_aligmnent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_bottom"
        android:layout_margin="@dimen/dp_2"
        android:background="@color/pattern_light_blue"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            style="@style/dialog_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@null"
            android:gravity="center"
            android:text="@string/save_txt" />

        <Button
            android:id="@+id/save_button"
            style="@style/dialog_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@null"
            android:gravity="center"
            android:text="@string/dialog.cancel_button" />
    </LinearLayout>
</RelativeLayout>