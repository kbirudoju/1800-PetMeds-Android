<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pattern_light_blue"
                android:orientation="vertical">

    <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:gravity="left"
            android:orientation="vertical">


        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/repeat_every_text"
                    style="@style/cart_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_2"
                    android:singleLine="true"
                    android:text="Repeat Every"></TextView>

            <EditText
                    android:id="@+id/repeat_every_amount"
                    style="@style/StyledEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_2"
                    android:inputType="number"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:text="1"></EditText>

            <TextView
                    android:id="@+id/repeat_every_days_text"
                    style="@style/cart_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_2"
                    android:singleLine="true"
                    android:text="Weeks"></TextView>
        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                <TextView

                        android:id="@+id/day_sunday"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/circular_background"
                        android:gravity="center"
                        android:text="@string/day_sunday"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12"/>

                <TextView
                        android:layout_marginLeft="@dimen/dp_22"
                        android:id="@+id/day_monday"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/circular_background"
                        android:gravity="center"
                        android:text="@string/day_monday"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12"/>

                <TextView
                        android:layout_marginLeft="@dimen/dp_22"
                        android:id="@+id/day_tuesday"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/circular_background"
                        android:gravity="center"
                        android:text="@string/day_tuesday"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12"/>

                <TextView
                        android:layout_marginLeft="@dimen/dp_22"
                        android:id="@+id/day_wednesday"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/circular_background"
                        android:gravity="center"
                        android:text="@string/day_wednesday"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/day_thursday"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/circular_background"
                        android:gravity="center"
                        android:text="@string/day_thursday"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12"/>

                <TextView
                        android:layout_marginLeft="@dimen/dp_22"
                        android:id="@+id/day_friday"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/circular_background"
                        android:gravity="center"
                        android:text="@string/day_friday"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12"/>

                <TextView
                        android:layout_marginLeft="@dimen/dp_22"
                        android:id="@+id/day_saturday"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/circular_background"
                        android:gravity="center"
                        android:text="@string/day_saturday"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>